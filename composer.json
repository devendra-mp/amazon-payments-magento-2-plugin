{
  "name": "amazon/module-payment",
  "description": "Official Magento2 Plugin to integrate with Amazon Payments",
  "require": {
    "php": "~5.5.0|~5.6.0|~7.0.0",
    "magento/framework": "100.0.*",
    "amzn/login-and-pay-with-amazon-sdk-php": "dev-master"
  },
  "require-dev": {
    "phpspec/phpspec": "^2.4.1"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://repo.magento.com/"
    },
    {
      "type": "git",
      "url": "https://github.com/nagno/phpspec-bootstrap-magento2.git"
    }
  ],
  "type": "magento2-module",
  "version": "100.0.0",
  "license": [
    "OSL-3.0",
    "AFL-3.0"
  ],
  "config": {
    "bin-dir": "bin"
  },
  "autoload": {
    "files": [
      "src/Login/registration.php",
      "src/Payment/registration.php"
    ],
    "psr-4": {
      "Amazon\\Login\\": "src/Login",
      "Amazon\\Payment\\": "src/Payment"
    }
  }
}
