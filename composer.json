{
  "name": "amazon/module-login-and-pay",
  "description": "Official Magento2 Plugin to integrate with Amazon Payments",
  "type": "metapackage",
  "version": "1.0.0",
  "license": [
    "Apache-2.0"
  ],
  "require": {
    "php": "~5.6.0|7.0.2|~7.0.6",
    "amzn/login-and-pay-with-amazon-sdk-php": "dev-psr_logging",
    "amazon/module-core": "^1.0.0",
    "amazon/module-login": "^1.0.0",
    "amazon/module-payment": "^1.0.0"
  },
  "require-dev": {
    "guzzlehttp/guzzle": "^6.2.0",
    "phpunit/phpunit": "4.1.0",
    "behat/behat": "^3.1.0",
    "behat/mink": "^1.7.1",
    "behat/mink-extension": "^2.2",
    "behat/mink-goutte-driver": "^1.2.1",
    "behat/mink-selenium2-driver": "^1.3.1",
    "sensiolabs/behat-page-object-extension": "^2.0.0",
    "bex/behat-magento2-init": "dev-master",
    "ciaranmcnulty/behat-stepthroughextension": "dev-master"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://repo.magento.com/"
    },
    {
      "type": "git",
      "url": "https://github.com/jamescowie/behat-magento2-init.git"
    },
    {
      "type": "path",
      "url": "src/Core"
    },
    {
      "type": "path",
      "url": "src/Login"
    },
    {
      "type": "path",
      "url": "src/Payment"
    }
  ],
  "config": {
    "bin-dir": "bin"
  }
}
