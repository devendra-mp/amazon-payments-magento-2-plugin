<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <route url="/V1/amazon-order-information/:amazonOrderReferenceId" method="PUT">
        <service class="Amazon\Payment\Api\OrderInformationManagementInterface" method="saveOrderInformation"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/amazon-shipping-address/:amazonOrderReferenceId" method="PUT">
        <service class="Amazon\Payment\Api\AddressManagementInterface" method="saveShippingAddress"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
</routes>