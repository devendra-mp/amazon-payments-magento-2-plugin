<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="steps" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="shipping-step" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="amazon-init" xsi:type="array">
                                                    <item name="component" xsi:type="string">Amazon_Payment/js/view/checkout-init</item>
                                                    <item name="displayArea" xsi:type="string">amazon-init</item>
                                                    <item name="children" xsi:type="array">
                                                        <item name="component" xsi:type="string">uiComponent</item>
                                                        <item name="displayArea" xsi:type="string">before-amazon-pay</item>
                                                        <item name="children" xsi:type="array">
                                                            <!-- before login form fields -->
                                                        </item>
                                                    </item>
                                                </item>
                                                <item name="amazon-pay" xsi:type="array">
                                                    <item name="config" xsi:type="array">
                                                        <item name="deps" xsi:type="array">
                                                            <item name="0" xsi:type="string">checkout.steps.shipping-step.amazon-init</item>
                                                        </item>
                                                    </item>
                                                    <item name="component" xsi:type="string">Amazon_Payment/js/view/checkout-pay</item>
                                                    <item name="displayArea" xsi:type="string">amazon-pay</item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>